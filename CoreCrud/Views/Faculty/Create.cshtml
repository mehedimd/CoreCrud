@model CoreCrud.Models.Faculty


<form asp-action="Create" asp-controller="Faculty" method="post" enctype="multipart/form-data">
    @Html.ValidationSummary()
    <table class="table bg-success">
        <tr>
            <td>
                <label>Faculty Name:</label>
                <input asp-for="FacultyName" class="form-control" />
            </td>
            <td>
                <label>Phone Number:</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </td>
        </tr>
        <tr>
            <td>
                <label>Course Name:</label>
                <input asp-for="CourseName" class="form-control" />
            </td>
            <td>
                <label>Course Start Date:</label>
                <input asp-for="CourseStartDate" class="form-control" />
            </td>
        </tr>
        <tr>
            <td>
                <label>Profile Picture:</label>
                <input type="file" name="Picture" accept="/images*" class="form-control" />
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Create" class="btn btn-primary"/>
            </td>
        </tr>
    </table>
</form>
